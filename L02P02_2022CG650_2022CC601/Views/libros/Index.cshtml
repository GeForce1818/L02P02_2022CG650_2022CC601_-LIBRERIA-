@{
    ViewBag.Title = "Lista de Libros";
    var libros = new List<object>
    {
        new { Nombre = "Nombre del Libro 1", Autor = "Autor", Precio = 12 },
        new { Nombre = "Nombre del Libro 2", Autor = "Autor", Precio = 8 },
        new { Nombre = "Nombre del Libro 3", Autor = "Autor", Precio = 5 },
        new { Nombre = "Nombre del Libro 4", Autor = "Autor", Precio = 15 },
        new { Nombre = "Nombre del Libro 5", Autor = "Autor", Precio = 20 }
    };
}

<style>
    .agregar-libro {
        min-width: 100px;
    }

    .card {
        border-radius: 10px;
    }

</style>

<div class="container mt-4">
    <div class="row">
        <!-- Sección de Libros -->
        <div class="col-md-8">
            <h4 class="text-primary">Libros</h4>
            @foreach (var libro in libros)
            {
                var libroObj = (dynamic)libro;
                <!-- Convertimos el objeto a dinámico -->
                <div class="card mb-2">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@libroObj.Nombre</strong> <br />
                            <small>@libroObj.Autor</small>
                        </div>
                        <span class="badge bg-secondary fs-6">@libroObj.Precio USD</span>
                        <a href="#" class="btn btn-success btn-sm agregar-libro"
                           data-nombre="@libroObj.Nombre"
                           data-precio="@libroObj.Precio">
                            + Agregar
                        </a>
                    </div>
                </div>
            }
        </div>

        <!-- Sección de Total -->
        <div class="col-md-4">
            <h4 class="text-primary">Total Libros <span class="badge rounded-pill bg-primary">3</span></h4>
            <div class="card">
                <div class="card-body">
                    <p class="mb-1"><strong>Total (USD)</strong></p>
                    <h4 class="text-end">$25</h4>
                    <button class="btn btn-primary w-100 mt-2">Completar</button>
                </div>
            </div>
        </div>
    </div>
</div>
