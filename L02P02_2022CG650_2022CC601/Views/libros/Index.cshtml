@{
}

<style>
    .header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        color: #4287f5;
    }
</style>

<div class="header">
     <h2>Libros</h2>
</div>
<form>



    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Imagen</th>
                <th>Autor</th>
                <th>Categoria</th>
                <th>Precio</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var libros in (IEnumerable<dynamic>)ViewData["listadoDeLibros"])
            {
                <tr>
                    <td>@libros.nombre</td>
                    <td>@libros.descripcion</td>
                    <td>@libros.url_imagen</td>
                    <td>@libros.id_autor</td>
                    <td>@libros.id_categoria</td>
                    <td>$@libros.precio</td>
                    <td>@libros.estado</td>

                </tr>
            }
        </tbody>
    </table>

</form>
